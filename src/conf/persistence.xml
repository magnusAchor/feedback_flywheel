      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/registration_login_db?serverTimezone=Africa/Lagos"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="donjazzy200"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
